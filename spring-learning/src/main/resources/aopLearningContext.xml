<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <!-- this enables the auto-detection of classes annotated with @Aspect -->
    <aop:aspectj-autoproxy />

    <bean id="aopTargetObject" class="com.hedges.aoplearning.AOPTargetObject"/>

    <bean id="aopTargetObject2" class="com.hedges.aoplearning.AOPTargetObject2"/>

    <bean id="anAspect" class="com.hedges.aoplearning.AnAspect"/>

</beans>